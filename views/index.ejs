<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Resultados Masterclass</title>
    <link rel="stylesheet" href="index.css">
    <link rel="icon" href="logo.ico">
</head>
<body>
    <header>
        <nav>
            <img src="logo.png">
            <div id="opciones-nav">
                <ul>
                    <a href="/">Inicio</a>
                    <a href="/top-diez">Top 10</a>
                </ul>
            </div>
        </nav>
    </header>
    <div>
        <table id="puntajes">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Puntaje</th>
                </tr>
            </thead>
            <tbody id="tbody">
            </tbody>
        </table>
    </div>

    <script>
        function updateTable(data) {
            const tableBody = document.getElementById('tbody');
            tableBody.innerHTML = ''; // Limpiar la tabla antes de agregar nuevos datos

            data.forEach(item => {
                const row = document.createElement('tr');
                row.innerHTML = `<td>${item.nombre}</td><td>${item.puntaje}</td>`;
                tableBody.appendChild(row);
            });
        }

        async function fetchData() {
            console.log("Intervalo abierto");
            const config = {
                method: "GET",
                mode: "cors",
                headers: {
                    "Access-Control-Allow-Origin": ["*"],
                    "Access-Control-Allow-Methods": "GET, POST",
                    "Access-Control-Allow-Headers": ["*"]
                }
            }
            try {
                const response = await fetch("https://pagina-puntajes.onrender.com/obtener-registros");
                if (!response.ok) {
                    throw new Error('Error en la red');
                }
                const data = await response.json();
                console.log("Fetch: ", data);
                updateTable(data);

            } catch (error) {
                console.error('Error: ', error);
            }
        }    

        setInterval(fetchData, 3000);
        window.onload = fetchData;
    </script>

    <script src="/app.js" type="text/javascript"></script>
</body>
</html>
